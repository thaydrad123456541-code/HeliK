<!DOCTYPE html>
<html>
<head>
    <title>HeliK OS Downloader</title>
    <hta:application 
        id="oHeliK"
        border="thin"
        caption="yes"
        scroll="no"
        windowstate="normal"
    >
    <style>
        body { font-family: 'Segoe UI', Tahoma, sans-serif; background-color: #f0f0f0; text-align: center; padding: 20px; }
        button { padding: 10px 20px; margin: 10px; cursor: pointer; border-radius: 5px; border: 1px solid #ccc; }
        #yesBtn { background-color: #4CAF50; color: white; font-weight: bold; }
        #noBtn { background-color: #f44336; color: white; }
    </style>

    <script language="VBScript">
        Sub Window_OnLoad
            window.resizeTo 400, 200
        End Sub

        Sub DownloadRepo
            Set shell = CreateObject("WScript.Shell")
            ' Define the GitHub ZIP URL and the destination (Desktop)
            Dim repoUrl, zipPath
            repoUrl = "https://github.com/YourUsername/HeliK-OS/archive/refs/heads/main.zip"
            zipPath = shell.SpecialFolders("Desktop") & "\HeliK-OS.zip"
            
            ' PowerShell command to download and extract
            psCommand = "powershell -Command ""Invoke-WebRequest -Uri '" & repoUrl & "' -OutFile '" & zipPath & "'; " & _
                        "Expand-Archive -Path '" & zipPath & "' -DestinationPath '" & shell.SpecialFolders("Desktop") & "\HeliK-OS' -Force"""
            
            ' Run the command hidden
            shell.Run psCommand, 0, True
            
            MsgBox "Download and Extraction Complete! Check your Desktop.", 64, "Success"
            window.close()
        End Sub

        Sub CloseApp
            window.close()
        End Sub
    </script>
</head>
<body>
    <h3>Do You Want To Download HeliK OS?</h3>
    <button id="yesBtn" onclick="DownloadRepo()">Yes</button>
    <button id="noBtn" onclick="CloseApp()">No</button>
</body>
</html>